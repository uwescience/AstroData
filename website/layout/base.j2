<!doctype html>
<head>
  {% block starthead %}{% endblock starthead %}
  <meta charset="{{ resource.meta.charset }}">

  <title>{% block title %}{{ resource.meta.title }}{% endblock %}</title>
  <meta name="description" content="{{ resource.meta.description }}">
  <meta name="author" content="{{ resource.meta.author }}">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="{{ resource.meta.viewport }}">

  {% block favicons %}
  <!-- Place favicon.ico
        in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="{{ content_url('/favicon.ico') }}">
  {% endblock favicons %}

  {% block css %}
  <link rel="stylesheet" href="{{ media_url('css/site.css') }}">
  <link href='http://fonts.googleapis.com/css?family=Raleway:400,500,600,700,300' rel='stylesheet' type='text/css'>
  {% endblock css %}

  {% block headjs %}
  {% endblock headjs %}
  {% block endhead %}{% endblock endhead %}
</head>
<body id="{{ resource.meta.id if resource.meta.id else resource.slug }}">

  {% block main %}
    {% block nav %}
      {% from "macros.j2" import render_nav with context %}
      {{ render_nav(menu, 'main_nav') }}
    {% endblock nav %}
    {% filter markdown -%}
      {% block content %}
      {% endblock content %}
    {%- endfilter %}
  {% endblock main %}

  {% block footer %}
    <section class="footer">
     <p>Website created with <a href="http://hyde.github.io/">Hyde</a>.  Layout by Jake VanderPlas.</p>
    </section>
  {% endblock footer %}


  {% block js %}
  {% block jquery %}
  <script src="{{ media_url('js/jquery-1.11.0.min.js') }}"></script>
  {% endblock jquery %}

  {% block scripts %}
    <script defer="defer" src="{{ media_url('js/main.js') }}"></script>
    <script type="text/JavaScript">
      var currentBio = null;
      function displayBio(srcID, destID){
        if(currentBio == srcID){
          currentBio = null;
          $("#" + destID).hide(400,
                function(){
                   document.getElementById(destID).innerHTML = "";
                   $(".biopic").css({opacity:1.0});
                });
        }else{
          currentBio = srcID;
          $(".biopic").css({opacity:0.3});
          $("#biopic" + srcID).css({opacity:1.0});
          $("#" + destID).hide()
          document.getElementById(destID).innerHTML = document.getElementById(srcID).innerHTML;
          $("#" + destID).show(400);
        }
      }
    </script>
  {% endblock scripts %}
  {% endblock js %}
</body>
</html>
